{
  "name": "gamechat-ai",
  "version": "1.0.0",
  "description": "GameChat AI - MVP root scripts (docs/deploy helpers)",
  "private": true,
  "scripts": {
    "dev:docker": "docker-compose up -d backend",
    "dev:logs": "docker-compose logs -f backend",
    "dev:down": "docker-compose down",
    "test:backend": "cd backend && pytest -q",
    "test:frontend": "cd frontend && npm test",
    "docs:open": "open ./docs/README.md",
    "deploy:cloud-run:mvp": "bash ./scripts/deployment/deploy_cloud_run_mvp.sh",
    "deploy:firebase:mvp": "cd frontend && npm run mvp:build && cd .. && firebase deploy --only hosting"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
