{
  "name": "gamechat-ai-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:full": "concurrently \"npm run dev\" \"cd ../backend && python -m uvicorn app.main:app --reload --host 0.0.0.0 --port 8000\"",
    "dev:backend": "cd ../backend && python -m uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "build": "SENTRY_SUPPRESS_INSTRUMENTATION_FILE_WARNING=1 next build",
    "build:ci": "echo 'Starting CI build...' && CI=true DOCKER_BUILD=true NODE_ENV=production SENTRY_SUPPRESS_INSTRUMENTATION_FILE_WARNING=1 npm install --production=false && echo 'Dependencies installed. Starting Next.js build...' && next build",
    "build:firebase": "NODE_ENV=production SENTRY_SUPPRESS_INSTRUMENTATION_FILE_WARNING=1 next build",
    "start": "next start",
    "start:ci": "NODE_ENV=production next start -p 3000 --hostname 0.0.0.0",
    "start:full": "concurrently \"npm run start\" \"cd ../backend && python -m uvicorn app.main:app --host 0.0.0.0 --port 8000\"",
    "lint": "next lint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "NEXT_PUBLIC_ENVIRONMENT=test NEXT_PUBLIC_DISABLE_RECAPTCHA=true NEXT_PUBLIC_API_URL=http://localhost:8000 playwright test",
    "test:e2e:ui": "NEXT_PUBLIC_ENVIRONMENT=test NEXT_PUBLIC_DISABLE_RECAPTCHA=true NEXT_PUBLIC_API_URL=http://localhost:8000 playwright test --ui",
    "test:e2e:debug": "NEXT_PUBLIC_ENVIRONMENT=test NEXT_PUBLIC_DISABLE_RECAPTCHA=true NEXT_PUBLIC_API_URL=http://localhost:8000 playwright test --debug",
    "analyze": "ANALYZE=true npm run build",
    "build:prod": "NODE_ENV=production SENTRY_SUPPRESS_INSTRUMENTATION_FILE_WARNING=1 npm run build",
    "pwa:install": "echo 'PWA features are automatically enabled in production builds'",
    "lighthouse": "../scripts/lighthouse-audit.sh",
    "performance": "npm run build && npm run lighthouse",
    "typecheck": "tsc --noEmit",
    "ci-check": "npm run lint && npm run typecheck && npm run test -- --coverage --run --coverage.reporter=text --coverage.reporter=lcov && npx vitest --run --coverage --coverage.reporter=text --coverage.reporter=lcov --coverage.threshold=80"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@sentry/nextjs": "^9.30.0",
    "@sentry/replay": "^7.116.0",
    "@tailwindcss/postcss": "^4.1.11",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "firebase": "^11.9.1",
    "lucide-react": "^0.511.0",
    "next": "^15.3.5",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.0",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.3.5",
    "web-vitals": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.53.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.5.0",
    "@vitest/ui": "^3.1.4",
    "concurrently": "^8.2.2",
    "eslint": "^9.30.1",
    "eslint-config-next": "^15.3.5",
    "jsdom": "^26.1.0",
    "tailwindcss": "^4.1.7",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  }
}
